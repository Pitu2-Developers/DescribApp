@import '~variables';

input[type=submit]{
    padding: 10px 30px;
    border-radius: 40px;
    outline: 0;
}


input[type=text],input[type=password]{
    border: 0;
    outline: none;
}

.form {
  display: flex;
  flex-direction: column;
  align-items: center;
  max-width: 400px;
  min-width: 320px;
  padding: 10px;

  &__input {
    display: block;
    padding: 15px;
    border-radius: 50px;
    width: 100%;
  }
  &__submit{
      border:thin solid transparent;
      transition: all ease 0.3s;
      &:active{
          transform: scale(.9);
      }
      &:hover{
          background: $primary;
          color:#fff;
          border:thin solid rgba(#fff,0.4);
      }
      &--white{
          background: white;
          color:$primary;
      }
  }

  &__field {
    width: 100%;
    margin-bottom: 0.5rem;
  }
}